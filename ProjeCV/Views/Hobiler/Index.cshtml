@using ProjeCV.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLINTEREST>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>HOBILER</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
            <tr>
                <th>@x.ID</th>
                <td>@x.INTEREST</td>
                <td>@Html.ActionLink("Sil","HobiSil", new { id = x.ID }, new { @class = "btn btn-warning", onclick = "return confirm('Silmek istiyor musunuz?')" })</td>
                <td><a href="/Hobiler/HobiGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
            </tr>
            }
        </tbody>
    </table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index", new { sayfa}))
<a href="/Hobiler/YeniHobi" class="btn btn-info">Yeni Hobi Ekle</a>
